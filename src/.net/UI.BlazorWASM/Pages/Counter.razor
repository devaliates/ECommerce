@page "/counter"
@inject ILaptopService<ILaptop> laptopService

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    public Counter()
    {

    }

    private int currentCount = 0;

    private void IncrementCount()
    {

        ILaptop laptop = new LaptopModel() { Id = Guid.NewGuid(), Count = 50, IsSellable = true, Price = 150, Title = "MacBook" };

        var rLaptop = laptopService.Add(laptop);

        if (rLaptop.Id == laptop.Id)
            currentCount++;
    }
}